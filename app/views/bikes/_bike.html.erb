<div class="card-link">
<%= link_to bike_path(bike) do %>
<div class="bike-card-small-rated">

  <div class="bike-card-small-rated-header">
    <div class="star-container">
      <i class="fas fa-star"></i>
      <i class="fas fa-star"></i>
      <i class="fas fa-star"></i>
      <i class="fas fa-star"></i>
      <i class="fas fa-star"></i>
    </div>
    <i class="far fa-heart"></i>
  </div>

  <div class="bike-card-small-rated-text">

      <%= cl_image_tag bike.pictures.first.key, height: 200, width: 350, crop: :fill %>

    <div class="text">
      <div class="main">
      <h3><%="#{bike.maker} #{bike.model}"%></h3>
      <p>
        <%= bike.category  %> |
        <%= bike.location  %>
      </p>
      </div>

      <div class="price">
        <%= bike.daily_price.truncate  %> <span>IDR/day</span>
      </div>

    </div>
  </div>

</div>
<% end %>
</div>
