<div class="container">

  <div class="page-title">
    <h1>Bikes for rent :</h1>
  </div>

  <%# map! %>
  <div class="row">
    <div class="col-12">
      <div class="m-3 w-100" style="height: 400px;"
        data-controller="mapbox"
        data-mapbox-markers-value="<%= @markers.to_json %>"
        data-mapbox-api-key-value="<%= ENV['MAPBOX_TOKEN'] %>">
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-6 w-100">
      <% @bikes.each do |bike| %>
      <div class="bike-card-small-rated m-3">
        <div class="bike-card-small-rated-header">
          <div class="star-container">
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
          </div>
          <i class="far fa-heart"></i>
        </div>

        <div class="bike-card-small-rated-text">
          <%= cl_image_tag bike.pictures.first.key, height: 200, width: 400, crop: :fill %>
          <div class="text">
            <h3><%=link_to "#{bike.maker} #{bike.model}", bike_path(bike) %></h3>
            <p>
              <%= bike.category  %> |
              <%= bike.location  %> |
              <%= bike.daily_price.truncate %> IDR per day</p>
          </div>
        </div>
      </div>
      <% end  %>
    </div>
  </div>

</div>
