<div class="container">

  <div class="page-title">
    <h1>Bikes for rent :</h1>

    <hr>
  </div>

  <div class="card-map-container">

    <div class="map" style="width: 100%; height: 600px;"
      data-controller="mapbox"
      data-mapbox-markers-value="<%= @markers.to_json %>"
      data-mapbox-api-key-value="<%= ENV['MAPBOX_TOKEN'] %>">
    </div>




    <div class="cards">
      <% @bikes.each do |bike| %>
        <%= render "bike", bike: bike %>
      <% end  %>

    </div>
  </div>

  </div>

</div>
