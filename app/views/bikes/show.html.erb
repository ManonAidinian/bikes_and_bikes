<div class="my-container">

  <div class="bike-columns">

    <div class="images">

      <%= cl_image_tag @bike.pictures.first.key, height: 200, width: 400, crop: :fill, class: 'pic' %>

    </div>

  <div class="bike-infos">
    <h1><%= "#{@bike.maker} #{@bike.model}" %></h1>

    <ul class="">
      <li class="">Year : <%= @bike.year  %></li>
      <li class="">Description : <%= @bike.description  %></li>
      <li class="">Category : <%= @bike.category  %></li>
      <li class="">Location : <%= @bike.location  %></li>
      <li class="">Mileage : <%= @bike.mileage  %> Km</li>
      <li class="">Price : <%= @bike.daily_price.truncate  %>IDR/Day</li>
    </ul>

    <%= link_to "Book", styleguide_path, class: 'button primary-btn btn-txt-body-primary' %>
  </div>
</div>



