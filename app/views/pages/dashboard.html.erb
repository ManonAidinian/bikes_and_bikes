<%# END MANON'S my bikes horizontal card ----------------------- %>
    </div> <%#div my bikes end %>


    <div class="mybookings">
      <h2 id="mybookings">My bookings</h2>
<%# MANONS card my-bookings----------------------- %>
      <%= render 'my-bookings-card' %>
<%# end MANONS card my-bookings----------------------- %>
    </div><%#div my bookings end %>


    <div class="bookingrequests">
      <h2 id="bookingrequests">Booking Requests</h2>
<%# MANONS card my-request----------------------- %>
      <%= render 'my-requests-card' %>
<%# end MANONS card my-request----------------------- %>
