<div class="complete-dashboard">
  <div class="sidebar">
    <%= render 'shared/sidebar' %>
  </div>

  <div class="dashboard-container">

    <div class="title">
      <h1>Dashboard</h1>
    </div>

    <div class="intro">
      <h2>Hello<%= "#{current_user.first_name} #{current_user.last_name}" %></h2>
      <p><small><%= "Joined #{current_user.created_at}" %></small></p>
